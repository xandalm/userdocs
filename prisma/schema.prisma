generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  documents Document[]

  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?
}

model Document {
  id Int @id @default(autoincrement())
  name String
  ownerId Int
  owner User @relation(fields: [ownerId], references: [id])
  statusId Int
  status DocumentStatus @relation(fields: [statusId], references: [id])
  
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?
}

model DocumentStatus {
  id Int @id @default(autoincrement())
  name String
  documents Document[]
  
  createdAt DateTime
  updatedAt DateTime?
  deletedAt DateTime?
}
